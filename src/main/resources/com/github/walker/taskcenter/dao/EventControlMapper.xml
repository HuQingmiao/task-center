<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC  "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.walker.taskcenter.dao.EventControlDao">

    <!-- ============================= INSERT ============================= -->
    <insert id="save" useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO event_control( id,app_id,enable )
        VALUES ( #{id},#{appId},#{enable})
    </insert>


    <!-- batch insert for mysql -->
    <insert id="saveBatch">
        INSERT INTO event_control( id,app_id,enable )
        VALUES 
        <foreach collection="list" item="item" index="index" separator=",">
            ( #{item.id},#{item.appId},#{item.enable} )
        </foreach>
    </insert>


    <!-- batch insert for oracle -->
    <!--
    <insert id="saveBatch">
        INSERT INTO event_control( id,app_id,enable )
        <foreach collection="list" item="item" index="index" separator="UNION ALL">
            SELECT #{item.id},#{item.appId},#{item.enable} 
              FROM DUAL 
        </foreach>
    </insert>

    -->

    <!-- ============================= UPDATE ============================= -->
    <update id="update">
        UPDATE event_control
        <set>
            app_id=#{appId},
            enable=#{enable},
        </set>
        WHERE id=#{id} 
    </update>

    <update id="updateIgnoreNull">
        UPDATE event_control
        <set>
            <if test="appId!= null">app_id=#{appId},</if>
            <if test="enable!= null">enable=#{enable},</if>
        </set>
        WHERE id=#{id} 
    </update>

    <update id="updateBatch" parameterType="java.util.List">
        UPDATE event_control
        <set>
            <foreach collection="list" item="item" index="index" open="app_id= CASE id" close="END" separator=" " >
                WHEN #{item.id} THEN #{item.appId}
            </foreach>,
            <foreach collection="list" item="item" index="index" open="enable= CASE id" close="END" separator=" " >
                WHEN #{item.id} THEN #{item.enable}
            </foreach>,
        </set>
        WHERE 
            <foreach collection="list" separator="or" item="item" index="index">
                id=#{item.id}
            </foreach>
    </update>


    <!-- ============================= DELETE ============================= -->
    <delete id="delete">
        DELETE FROM event_control
        WHERE id=#{id} 
    </delete>

    <delete id="deleteBatch">
        DELETE FROM event_control
        WHERE
        <foreach collection="list" item="item" index="index" open="(" separator="OR" close=")">
            id=#{item.id} 
        </foreach>
    </delete>

    <delete id="deleteByPK">
        DELETE FROM event_control
        WHERE id=#{id} 
    </delete>

    <delete id="deleteAll">
        DELETE FROM event_control
    </delete>


    <!-- ============================= SELECT ============================= -->
    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*) FROM event_control
    </select>

    <select id="findByPK" resultType="com.github.walker.taskcenter.vo.EventControl">
        SELECT * FROM event_control
        WHERE id=#{id} 
    </select>

    <select id="find" resultType="com.github.walker.taskcenter.vo.EventControl">
        SELECT id,app_id,enable
         FROM event_control
        <where>
            <if test="id!= null">
               AND id = #{id}
            </if>
            <if test="appId!= null">
               AND app_id = #{appId}
            </if>
            <if test="enable!= null">
               AND enable = #{enable}
            </if>
        </where>
    </select>

</mapper>
